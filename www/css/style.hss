	vertical-align:middle;	
	
	width: 90px;
	margin:0;
	padding:4px;
	box-shadow: CSS("4px 4px 0px #8E662A");
	
	.box{
		line-height:22px;
		background-color:#FFFFFF;
		color:#666;
		font-size:14px;
		font-weight:bold;
		text-align:center;
	    margin: 0px;
		border-radius:4px;
	}

	/* place link */
	a{
		color:CSS(" #FFFFFF !important");
	}
	a:hover{
		color:CSS(" #FFFFFF !important");
	}
}
 


/* categories */
