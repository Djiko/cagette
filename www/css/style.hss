}


/**
	Popovers for help and tutorials
**/
.popover{

	color:white;
	
	
	h3.popover-title{
		padding: 4px;
		color:CSS("#BB9931 !important");
		border-bottom:CSS("1px solid #BB9931 !important");
		font-weight:CSS("bold !important");
		font-family:CSS("'Arial','sans-serif' !important");
		//background-color:CSS("#583816 !important");	
	}
	
	.footer{
		
		border-top: 1px solid #BB9931;
		height: 45px;
		padding: 12px 0;
    
		
		.pull-left .btn{
		
			background-color:#583816;
			color:white;
			border:1px solid white;
		}
		
		.pull-right .btn{
		
			background-color:#FC0;
			color:#583816;
			border:1px solid #583816;
		}
	}
	
	
	
	
}

/* skin a modal like a tuto popover */ 
.modal.help{
	.modal-header{
		font-size: 1.3em;
		color:CSS("#BB9931 !important");
		border-bottom:CSS("1px solid #BB9931 !important");
		font-weight:CSS("bold !important");
		font-family:CSS("'Arial','sans-serif' !important");
		background-color:CSS("#583816 !important");	
	}
	
	.modal-content{
		background-color:CSS("#583816 !important");
		color:white;
		
	}
	
	.modal-footer{
		border-top:CSS("1px solid #BB9931 !important");
	}
	
}
/* hightlight a zone for tutos */
.highlight{
	border: 2px dashed orange;
    border-radius: 16px;
}

 

/* Distrib */
.distrib{
	
	margin: 0px 0px 28px 0px;
	position:relative;
	
	.header{
		
		display: block;
		height: 72px;
		overflow:hidden;
		border-top-left-radius:8px;
		border-top-right-radius:8px;		
		color:#FFF;
		
		
		.info{
			font-size:16px;
			line-height: 22px;
			font-weight:bold;
			/* place link */
			a{
				color:CSS(" #FFFFFF !important");
			}
			a:hover{
				color:CSS(" #FFFFFF !important");
			}
		}
		
		vertical-align:middle;	
		
		margin:0;
		padding: 6px 6px 6px 90px;

		
		.date{
			line-height:23px;
			background-color:#FFFFFF;
			color:#666;
			font-size:14px;
			text-align:center;
			margin: 0 8px 0 0;
			border-radius:6px;
			border: 4px solid #C6C6C6;
		}

		
		
		.address, .closing{
			font-weight:normal;
			font-size:0.9em;
		
			line-height: 16px;
		}
		
		
	}
	
	.header{
		background-color:#749E3C;
	}
	
	.header.disabled{
		background-color:#999;
	}
	
	.header.orders{
		background-color:#B2823F;
	}
	
	.myorder{
		//background-color:#6F5026;
		//color:white;
		font-weight:bold;
		//padding-left:50px;
		color:#999;
		background:white;
		padding: 11px 0 4px 16px;
	}
	 
	.content{
		padding: 6px 6px 6px 6px;
		//background-color:#F0D277;
		//background-color:#C49657;
		background-color:#85B14D;
		border-bottom-left-radius:8px;
		border-bottom-right-radius:8px;
	}
	
	.content.disabled{
		background:#AAA;
	}
	
	.content.orders{
		background:#FFF;
		padding-left: 50px;
	}
	
