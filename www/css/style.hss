/*
	SHOP
*/

.shop{
	
	
	.header{
		background-color:#749E3C;
		display:inline-block;
		width:100%;
		
		border-top-left-radius:8px;
		border-top-right-radius:8px;
		padding:12px;
		
		font-size: 16px;
		line-height: 22px;
		
		color:white;
		a{
			color:white;
		}
		
		.info{
			font-weight: bold;	
		}
	}
	
	
	.body{
		background:white;
		display:inline-block;
		width:100%;
		padding-top: 12px;
		
		.catHeader{
			font-weight:bold;
			font-size:1.2em;
			color:#583816;
			border-bottom:1px solid #CCC;
			width:100%;
		}
	}
	
	
	.product{
		
		display: inline-block;
		
		.name{
			padding-left:8px;
		}
		
		.warning{
			font-size:11px;
			color:#900;
			font-weight:bold;
		}
		
	}

}


.price{
	font-weight:bold;
	font-size:1.3em;
}
	
.vat{
	color:#999999;
	//font-size:80%;
}


